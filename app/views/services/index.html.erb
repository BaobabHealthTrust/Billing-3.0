<style>
  .dataTables_filter{
    position: absolute;
    width: 50vw;
    top: 3vh;
    left: 50vw;
    font-size: 1.5em;
  }
  input{
    font-size: 1.5em;
  }
</style>
<div class="section-header">
  Services
</div>

<div style="height: 70vh; width: 100vw;">
  <table class="dashboard-main" id="serviceTypes" style="width: 100vw;">
    <thead>
    <th style="text-align: left;padding-left: 5px;">Name</th>
    <th>Category</th>
    <th>Actions</th>
    </thead>
    <tbody>
    <% (@services || []).each do |service| %>
        <tr>
          <td style="text-align: left;padding-left: 5px;"><%= service.name%></td>
          <td><%= service.service_type.name %></td>
          <td> <%= link_to 'View', "/services/#{service.id}" %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div id="keypad">
  <span class="keypad"></span>
</div>

<div class="footer">
  <button class="button green" style="float: right;" onmousedown="window.location='/'">Finish</button>
  <button class="button blue" style="float: right;">Add Service</button>
</div>

<%= javascript_include_tag 'jquery.dataTables.min.js' %>
<script type="text/javascript">
    // Styling the table with datatables library
    $(document).ready(function() {
        $('#serviceTypes').DataTable({"bLengthChange": false,
            "bDestroy": true,
            "pageLength":7
        });


    } );
</script>